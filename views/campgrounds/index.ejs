<% layout('layouts/boilerplate') %>
<h1>All Camp Sites!</h1>
<div>
    <a href="/campgrounds/new">Add a new camp</a>
</div>

<% for (camp of allCamps) {%>
    <div class="card">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.image[0].url %>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-secondary"><%= camp.location %></small>
                    </p>
                    <a href="/campgrounds/<%= camp.id %>" class="btn btn-secondary">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
    
        <!-- <a href="/campgrounds/<%=camp.id  %>"><%= camp.title%></a> -->               
<% } %>

